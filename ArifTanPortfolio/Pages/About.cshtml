<!-- Skills & Expertise Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="h1 text-center mb-5">Skills & Expertise</h2>
        
        <div class="row g-4">
            <!-- Programming Languages -->
            <div class="col-lg-3 col-md-6">
                <div class="skill-category">
                    <h3><i class="fas fa-code text-primary me-2"></i>Languages</h3>
                    @if (Model.ProgrammingLanguages?.Any() == true)
                    {
                        foreach (var skill in Model.ProgrammingLanguages)
                        {
                            <div class="skill-item">
                                <span class="skill-name">@skill.Name</span>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="progress" style="width: 100px; height: 8px;">
                                        <div class="progress-bar bg-primary" style="width: @(skill.Proficiency * 10)%"></div>
                                    </div>
                                    <span class="skill-level">@skill.ProficientcyLevel</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
            
            <!-- Frameworks & Technologies -->
            <div class="col-lg-3 col-md-6">
                <div class="skill-category">
                    <h3><i class="fas fa-layer-group text-primary me-2"></i>Frameworks</h3>
                    @if (Model.Frameworks?.Any() == true)
